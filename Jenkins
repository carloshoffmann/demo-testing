pipeline {
    agent any

    stages {


        stage('Build') {
            steps {
                sh '''
                    echo "installing dependencies"
                    npm install
                '''
            }
        }


        stage('Test') {
            steps {
                sh '''
                    echo "running tests"
                    MOCHA_FILE=./jenkins-test-results.xml ./node_modules/.bin/mocha test/** --reporter mocha-junit-reporter
                '''
            }
        }


    }

    post {

        always {

            mail to:"choffmann@ned.cl",
             subject:"jenkins script running!",
             body:"OK" 

            archive './jenkins-test-results.xml'

        }

        failure {
            mail to:"choffmann@ned.cl",
             subject:"jenkins build fail!!!!",
             body:"OK" 
        }


        success {
            mail to:"choffmann@ned.cl",
             subject:"jenkins script running smoothly!",
             body:"OK" 

        }

        unstable {
            echo 'This will run only if the run was marked as unstable'
        }

        changed {
            echo 'This will run only if the state of the Pipeline has changed'
            echo 'For example, if the Pipeline was previously failing but is now successful'
        }
    


    }


}
